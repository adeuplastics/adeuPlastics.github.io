    let currentQuestion = 0;
    let score = 0;

    function showQuestion() {
      const questionElement = document.getElementById("question");
      const optionsElement = document.getElementById("options");
      const nextButton = document.getElementById("next-button");

      const current = questions[currentQuestion];

      questionElement.textContent = current.question;
      optionsElement.innerHTML = "";

      current.options.forEach((option) => {
        const button = document.createElement("button");
        button.textContent = option;
        button.onclick = () => checkAnswer(option);
        optionsElement.appendChild(button);
      });

      nextButton.disabled = true;
    }

    function checkAnswer(selected) {
      const current = questions[currentQuestion];

      if (selected === current.answer) {
        alert("Resposta correcta!");
        score++;
        document.getElementById("score").innerText = score;
      } else {
        alert("Resposta incorrecta. La resposta correcta és: " + current.answer);
      }

      currentQuestion++;
      const nextButton = document.getElementById("next-button");
      if (currentQuestion < questions.length) {
        showQuestion();
      } else {
        alert("Fi del test. La teva puntuació és: " + score);
        nextButton.innerText = "Comença de nou";
        nextButton.onclick = restartGame;
      }
      nextButton.disabled = false;
    }

    function nextQuestion() {
      showQuestion();
    }

    function restartGame() {
      currentQuestion = 0;
      score = 0;
      document.getElementById("score").innerText = score;
      showQuestion();
    }
    function redirectToExternalPage() {
      window.location.href = 'https://ef106872-3a82-42e3-a731-3b3ec2b11dca-00-3qw6yp1hn61m9.janeway.repl.co/'; // Reemplaza 'https://www.ejemplo.com' por la URL a la que quieres redirigir
    }
    window.onload = showQuestion;
  </script>
